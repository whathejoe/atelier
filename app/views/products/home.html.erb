<!-- Carousel  -->
<div id="myCarousel" class="carousel slide" data-ride="carousel"  data-interval="3000">
	<!-- Indicators -->
	<ol class="carousel-indicators">
	    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
	    <li data-target="#myCarousel" data-slide-to="1"></li>
  	</ol>
  	<!-- Slides -->
  	<div class="carousel-inner">
  		<div class="item active">
  			<img src="<%= asset_path( 'banner_supp.jpg' ) %>" alt="First slide">
  		</div>
  		<div class="item">
  			<img src="<%= asset_path( 'banner.jpg' ) %>" alt="First slide">
  		</div>
  	</div>
</div>

<div class="container">	

	<h1>Bestsellers!</h1>
	<div class="row">
		<% @bestsellers.take(3).each do |b| %>
		<div class="col-xs-12 col-sm-6 col-md-4">
		    <div class="thumbnail">
		      	<%= link_to image_tag( b.image.url(:large), class: 'img-responsive' ), product_path(b) %>
		      	<div class="caption">
		       		<h3><%= b.name %> <small> $ <%= b.price %></small></h3>
		      	</div>
		    </div>
		</div>
		<% end %>
	</div>				
	<%= link_to 'See more', store_path, class: 'btn btn-default pull-right' %>

	<h1>New Arrivals!</h1>
	<div class="row">

		<% @new_arrivals.take(3).each do |n| %>
		<div class="col-xs-12 col-sm-6 col-md-4">
		    <div class="thumbnail">
		      	<%= link_to image_tag( n.image.url(:large), class: 'img-responsive' ), product_path(n) %>
		      	<div class="caption">
		       		<h3><%= n.name %> <small> $ <%= n.price %></small></h3>
		      	</div>
		    </div>
		</div>
		<% end %>

	</div>		
	<%= link_to 'See more', store_path, class: 'btn btn-default pull-right' %>
	
</div>