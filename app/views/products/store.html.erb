<div class="container">	
	<h1>Store</h1>
	<hr>

	<div class="row">
		<div class="col-md-3">
		    <div class="panel panel-default">
		        <div class="panel-heading text-center">Done shopping?</div>
		        <div class="panel-body">
					<%= link_to 'Cart / Checkout', cart_path, class: 'btn btn-warning btn-lg btn-block' %>
		        </div>
		    </div>
		    <% if flash[:message] %>
		    <div class="alert alert-danger fade in">
		        <a href="#" class="close" data-dismiss="alert">&times;</a>
		        <%= flash[:message] %>
		    </div>
			<% end %>
		</div>
		
	    <div class="col-md-9">
	    	<div class="row">

	    		<% @products.each_slice(4).each do |row| %>
	    		<% row.each do |p| %>
		    	<div class="col-md-3">
		    		<div class="thumbnail">
		    			<%= link_to image_tag( p.image.url(:medium), class: 'img-responsive' ), product_path(p) %>
				      	<div class="caption">
				       		<h4><%= p.name %><small> $ <%= p.price %></small></h4>
				      	</div>
				    </div>
		    	</div>
		    	<% end %>
		    	<div class="clearfix"></div>
		    	<% end %>

	    	</div>
	    </div>		
	</div>


</div>